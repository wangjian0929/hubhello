<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/HeaderLayout"
        android:background="@color/sick_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_alignTop="@+id/Logo"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_minus10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/backbutton" />

        <ImageView
            android:id="@+id/Logo"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_toRightOf="@+id/backBtn"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_35sdp"/>


        <!--<ImageView-->
            <!--android:id="@+id/Logo"-->
            <!--android:src="@drawable/logo"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:layout_marginTop="@dimen/_5sdp"-->
            <!--android:layout_marginBottom="@dimen/_5sdp"-->
            <!--android:layout_marginStart="@dimen/_10sdp"-->
            <!--android:layout_width="@dimen/_80sdp"-->
            android:layout_height="@dimen/_35sdp"/>
        <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Analytics"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/multiserviceview"
        android:layout_below="@+id/HeaderLayout"
        android:visibility="visible">
        <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:padding="@dimen/_7sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/dropdown"
            android:backgroundTint="@color/warm_grey" />

        <View
            android:layout_below="@+id/serviceName"
            android:background="@color/border_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>



    </RelativeLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_below="@+id/multiserviceview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/HeaderLayout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:text="Menu Breakdown"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/darked_green"
                    android:id="@+id/textmenu"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:layout_below="@+id/textmenu"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:hint=""
                    android:id="@+id/textDate"
                    android:textSize="@dimen/_11sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/textDate"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:id="@+id/idPieChart">
                </com.github.mikephil.charting.charts.PieChart>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageVeg"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@color/veg_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/_minus4sdp"
                        android:textColorHint="@color/black"
                        android:hint="Breads, Cereals, Rice and Pasta 35%"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:id="@+id/textVeg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageMeat"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@color/meat_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/_minus4sdp"
                        android:textColorHint="@color/black"
                        android:hint="Meat and alternatives 15%"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/textMeat"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageDairy"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@color/dairy_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/_minus4sdp"
                        android:textColorHint="@color/black"
                        android:hint="Dairy Foods 18%"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/textDairy"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageVegetables"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@color/vegetable_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/_minus4sdp"
                        android:textColorHint="@color/black"
                        android:id="@+id/textVegetables"
                        android:hint="Vegetables 7%"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginStart="@dimen/_30sdp"
                        android:id="@+id/imageFruit"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@color/fruit_Color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/_minus4sdp"
                        android:textColorHint="@color/black"
                        android:hint="Fruits 25%"
                        android:id="@+id/textFruit"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
            android:text="There is no data for current week"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/nodataerror"
            android:background="@color/sick_green"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:hint=""
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>


    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/loading"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/loadingbig"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/childLayout"
        android:background="@color/white"
        android:layout_below="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/viewRecylerMultipleChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
            android:text="We're sorry! An Error has occurred, please refresh the page and try again."
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/errortexthabit"
            android:background="@color/sick_green"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:hint=""
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        android:id="@+id/multiservicelayout"
        android:layout_below="@+id/multiserviceview"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/multiServiceRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="visible" />


    </RelativeLayout>


</RelativeLayout>