<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/HeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">


        <RelativeLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/ViewLayout"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Back"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/backbutton"
                android:backgroundTint="@color/text_color" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginStart="@dimen/_minus2sdp"
            android:id="@+id/ViewLayout1"
            android:layout_toRightOf="@+id/ViewLayout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Logo"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/logo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_25sdp"/>

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/View"
        android:layout_below="@+id/HeaderLayout"
        android:background="@color/view_Color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avtar"
        android:layout_below="@+id/View"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:hint="Kaye Wilson"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_below="@+id/profile_image"
        android:id="@+id/textProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_medium"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/textProfileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/View2"
            android:background="@color/view_Color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/NextLayout"
            android:layout_below="@+id/View2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/Profile"
                android:text="Profile"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"/>
            <ImageView
                android:id="@+id/next"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/nexticon"
                android:backgroundTint="@color/text_color"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_12sdp"/>
            <View
                android:layout_below="@+id/Profile"
                android:background="@color/view_Color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:background="@color/view_Color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_13sdp"
                android:text="Log out"
                android:id="@+id/Logout"
                android:textColor="@color/logout_Color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"/>
            <View
                android:background="@color/view_Color"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/_10sdp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>