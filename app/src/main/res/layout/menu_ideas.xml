<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/HeaderLayout"
        android:background="@color/sick_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Logo"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_35sdp"/>
        <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Recipes"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:id="@+id/linear"
        android:layout_below="@+id/HeaderLayout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/SelectedFood"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
                    android:id="@+id/meals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_7sdp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/dropdown"
                    android:backgroundTint="@color/warm_grey" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/AllFood"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
                    android:layout_width="wrap_content"
                    android:id="@+id/All"
                    android:text=""
                    android:padding="@dimen/_7sdp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/dropdown"
                    android:backgroundTint="@color/warm_grey"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_5sdp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipeimageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mealtimeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/foodgroupView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>
    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/loading"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/loadingbig"
        android:visibility="visible"/>

</RelativeLayout>

