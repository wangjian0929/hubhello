<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_marginTop="@dimen/_90sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/Logo"
                android:src="@drawable/logo"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/_70sdp"
                android:id="@+id/CenterLayout"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linearOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_minus8sdp"
                    android:layout_marginEnd="@dimen/_minus10sdp">
                    <com.feedAustralia.android.LanguageFont.FontTextView_SemiBold
                        android:id="@+id/EmailText"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/dark_green"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Enter your username to reset your password."
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <EditText
                    android:layout_below="@+id/linearOut"
                    android:id="@+id/Email"
                    android:hint="Username"
                    android:textSize="@dimen/_10sdp"
                    android:text=""
                    android:paddingBottom="@dimen/_5sdp"
                    android:lines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:textCursorDrawable="@null"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/edit_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:font="@font/avenirltstd_book"
                    android:visibility="visible"/>
            </RelativeLayout>
            <Button
                android:text="Reset Password"
                android:backgroundTint="@color/button_color"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:id="@+id/ResetPassword"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:background="@drawable/login_btn"
                android:layout_height="@dimen/_35sdp"
                android:fontFamily="@font/avenir_medium"/>
        </LinearLayout>
    </ScrollView>
    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/Loading"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/loadingbig"
        android:visibility="gone"/>
</RelativeLayout>