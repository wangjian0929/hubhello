<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sick_green</item>
        <item name="colorPrimaryDark">@color/sick_green</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AlertDialogAnimationLogin">
        <item name="android:windowEnterAnimation">@anim/slide_to_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_left_finiish</item>
    </style>

    <style name="AlertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fast_popup</item>
        <item name="android:windowExitAnimation">@anim/fast_popdown</item>
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">@dimen/_5sdp</item>
        <item name="android:maxHeight">@dimen/_20sdp</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="CalenderViewWeekBackground">
        <item name="android:selectedWeekBackgroundColor">@color/item_color</item>
    </style>



    <declare-styleable name="CalendarView">
        <attr name="textColor" format="color"/>
        <attr name="textsize" format="dimension"/>
        <attr name="textInsideCircleColor" format="color"/>
        <attr name="weekDaysNamesColor" format="color"/>
        <attr name="currentDayCircleColor" format="color"/>
        <attr name="selectedCircleColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="firstDayOfWeek" format="enum">
            <enum name="sunday" value="1"/>
            <enum name="monday" value="2"/>
            <enum name="tuesday" value="3"/>
            <enum name="wednesday" value="4"/>
            <enum name="thursday" value="5"/>
            <enum name="friday" value="6"/>
            <enum name="saturday" value="7"/>
        </attr>
    </declare-styleable>

</resources>
